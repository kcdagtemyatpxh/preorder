{
  "Urls": [ "https://+:5000" ],
  "Kestrel": {
    "Endpoints": {
      "HttpsFromPem": {
        "Url": "https://+:5000",
        "Certificate": {
          "Path": "certs/live/{Hostname}/fullchain.pem",
          "KeyPath": "certs/live/{Hostname}/privkey.pem"
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },
  "ConnectionStrings": {
    "Default": "{ConnectionString}"
  },
  "Identity": {
    "ClientId": "{ClientId}",
    "ClientSecret": "{ClientSecret}",
    "Issuer": "https://api.{Hostname}",
    "Authority": "https://api.{Hostname}",
    "AccessTokenLifetime": 300,
    "SessionTokenLifetime": 86400
  }
}
